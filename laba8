#include <stdio.h>
#include <math.h>
#include <locale.h>

int main()
{
    float c, a, b, otv;
    int a1, b1;

    setlocale(LC_ALL, "Russian");

    printf("Выберите задачу: \n");
    printf("1. Перевод размера файла из байт в килобайты. \n");
    printf("2. Найти количество отрезков B, размещенных на отрезке A.\n");
    printf("3. Найти длину незанятой части отрезка A. \n");
    printf("4. Дано двузначное число. Вывести число, полученное при перестановке цифр исходного числа. \n");
    printf("5. Дано трехзначное число. В нем зачеркнули первую слева цифру и приписали ее справа. Вывести полученное число. \n");
    printf("6. Выход\n\n");
    printf("Ваше число: ");
    while (1)
    {
        int vvod;
        scanf_s("%d", &vvod);
        switch (vvod)
        {
        case 1:

            printf("Введите размер файла в байтах: ");
            scanf_s("%f", &a);
            c = int(a / 1024);
            printf("\033[1;32mРезультат в килобайтах = \033[0m%.0f\n\n", c);
            printf("Выберите цифру: ");
            break;

        case 2:
            printf("Введите длину отрезка А: ");
            scanf_s("%f", &a);
            printf("Введите длину отрезка B: ");
            scanf_s("%f", &b);
            if (a > b)
            {
                c = a / b;
                printf("\033[1;32mВ отрезке A содержится полных отрезков B: \033[0m%.0f\n\n", c);
                printf("Выберите цифру: ");
            }
            else
            {
                printf("\033[5;31mОшибка! A должно быть >B. \033[0m\n\n");
                printf("Выберите цифру: ");
            }
            break;
        case 3:
                printf("Введите длину отрезка A: "); 
                scanf_s("%i", &a1);
                printf("Введите длину отрезка B: "); 
                scanf_s("%i", &b1);
                if (a1 > b1)
                {
                    printf("\033[1;32mОставшаяся длина отрезка А: \033[0m%i\n\n", a1 % b1);
                    printf("Выберите цифру: ");
                }
                else
                {
                    printf("\033[5;31mОшибка! A должно быть >B. \033[0m\n\n");
                    printf("Выберите цифру: ");
                }
            break;

        case 4:
            printf("Введите двузначное значение числа: ");
            scanf_s("%i", &a1);
            printf("\033[1;32mПосле перестановки чисел: \033[0m%i\n\n", (a1 / 10) + (a1 % 10) * 10);
            printf("Выберите цифру: ");
            break;
        case 5:
            printf("Введите трехзначное значение числа: ");
            scanf_s("%i", &a1);
            printf("\033[1;32mРезультат: \033[0m%i\n\n", (a1 % 100 / 10 * 100) + (a1 % 10) * 10 + a1 / 100);
            printf("Выберите цифру: ");
            break;
        case 6:
            printf("Хорошо, выходим(\n");
            return 0;
            break;
        default:
            printf("\033[5;31m Неправильный ввод! Попробуйте еще раз. \033[0m\n\n");
            printf("Выберите цифру: ");
        }
    }
}
