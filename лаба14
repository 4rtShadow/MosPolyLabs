#include <limits.h>
#include <stdio.h>
#include <locale.h>
#include <math.h>

int main()
{
    int N, n, a = 0, b = 0, c, sq, ost, y, w, x, z, max, min; 
    int k = 0, sum = 1; 
    float s = 1000; 
    int f1 = 1, f2 = 1, f = 0, kk = 2;

    setlocale(LC_ALL, "Rus");

    printf("1. Вывести все целые числа от A до B включительно; при этом каждое число должно выводиться столько раз, каково его значение.\n");
    printf("2. Не используя операции умножения и деления, найти длину незанятой части отрезка A.\n");
    printf("3. Вывести наименьшее из целых чисел K, для которых сумма 1 + 2 + . . . + K будет больше или равна N, и саму эту сумму.\n");
    printf("4. По данному P определить, через сколько месяцев размер вклада превысит 1100 руб.\n");
    printf("5. Найти наибольший общий делитель (НОД) чисел, используя алгоритм Евклида.\n");
    printf("6. Найти целое число K — порядковый номер числа Фибоначчи N.\n");
    printf("7. Выход.\n\n");
    printf("Ваше число: ");
    while (1)
    {
        int vvod;
        scanf_s("%d", &vvod);
        switch (vvod)
        {
        case 1:
            printf("Введите значение А: "); 
            scanf_s("%i", &a);
            printf("Введите значение В: "); 
            scanf_s("%i", &b);
            if ((a > 0) && (b > 0))
            {
                while (a > b || a < 0 || b < 0);
                for (int i = a; i < b + 1; i++)
                {
                    for (int j = 0; j < i; j++)
                    {
                        printf("%i", i);
                    }
                    printf("  ");
                }
            }
            else
            {
                printf("\033[5;31mОшибка! Числа должны быть больше нуля.\033[0m\n\n");
            }
            printf("\nВыберите цифру: ");
            break;
        case 2:
            printf("Введите длину отрезка А: "); 
            scanf_s("%i", &a);
            printf("Введите длину отрезка В: "); 
            scanf_s("%i", &b);
            if (a > b)
            {
                while (a - b >= 0)
                {
                    a = a - b;
                }
                printf("Длина незанятой части равна %i\n", a);
            }
            else
            {
                printf("\033[5;31mОшибка! Числа должны быть больше нуля.\033[0m\n\n");
            }
            printf("Выберите цифру: ");
            break;
        case 3:
            printf("Введите число: "); scanf_s("%i", &n);
            if (n > 1)
            {
                while (n > sum)
                {
                    k++;
                    sum += k;
                }
                printf("K: %i\nСумма:%i\n", k, sum);
            }
            else
            {
                printf("Ошибка! Число должно быть больше нуля.\n");
            }
            printf("Выберите цифру: ");
            break;
        case 4:
            printf("Введите процент вклада: "); 
            scanf_s("%i", &x);
            if ((x > 0) && (x < 25))
            {
                while (s <= 1100)
                {
                    k++;
                    s += s * x / 100;
                }
                printf("Kоличество месяцев: %i\nИтоговый размер вклада: %f\n", k, s);
            }
            else
            {
                printf("\033[5;31mОшибка! Процент должен быть больше нуля и меньше 25.\033[0m\n\n");
            }
            printf("Выберите цифру: ");
            break;
        case 5:
            printf("Введите число A: "); 
            scanf_s("%i", &z);
            printf("Введите число B: "); 
            scanf_s("%i", &x);
            if (z > x)
            {
                while ((z > 0) && (x > 0))
                {
                    if (z >= x)
                    {
                        z %= x;
                    }
                    else
                    {
                        x %= z;
                    }
                }
                printf("НОД равен %i.\n", x);
            }
            else
            {
                printf("\033[5;31mОшибка! Число А должно быть больше B.\033[0m\n\n");
            }
            printf("Выберите цифру: ");
            break;
        case 6:
            printf("Введите число: "); 
            scanf_s("%i", &n);
            if (n > 1)
            {
                while (f < n)
                {
                    kk++;
                    f = f2 + f1;
                    f2 = f1;
                    f1 = f;
                }
                printf("Порядковый номер числа Фибоначчи: %i\n\n", kk);
            }
            else
            {
                printf("\033[5;31mОшибка! Число должно быть больше 1.\033[0m\n\n");
            }
            printf("Выберите цифру: ");
            break;
        case 7:
            printf("Хорошо, выходим(\n");
            return 0;
            break;
        default:
            printf("\033[5;31m Неправильный ввод! Попробуйте еще раз. \033[0m\n\n");
            printf("Выберите цифру: ");
        }
    }
}
