#include <stdio.h>
#include <math.h>
#include <locale.h>


int main()
{
    int a, b, b1, a1, c;

    setlocale(LC_ALL, "Russian");

    printf("Выберите задачу: \n");
    printf("1. Найти количество секунд, прошедших с начала последней минуты. \n");
    printf("2. Определить номер дня недели для K-го дня года.\n");
    printf("3. Определить номер дня недели для K-го дня года, если известно, что в этом году 1 января было днем недели с номером N. \n");
    printf("4. Найти количество квадратов, размещенных на прямоугольнике, а также площадь незанятой части прямоугольника.  \n");
    printf("5. Определить какой век в каком году. \n");
    printf("6. Выход\n\n");
    printf("Ваше число: ");
    while (1)
    {
        int vvod;
        scanf_s("%d", &vvod);
        switch (vvod)
        {
        case 1:

            printf("Введите кол-во секунд: ");
            scanf_s("%i", &a);
            printf("\033[1;32mКол-во секунд, прошедших с начала последней минуты: = \033[0m%i\n\n", a % 60);
            printf("Выберите цифру: ");
            break;

        case 2:
            printf("Введите номер дня: ");
            scanf_s("%i", &a);
            if ((a >= 1) and (a <= 365))
            {
                c = a % 7;
                if (c == 1)
                {
                    printf("Это \033[1;32m1. Понедельник\033[0m\n\n");
                    printf("Выберите цифру: ");
                }
                if (c == 2)
                {
                    printf("Это \033[1;32m2. Вторник\033[0m\n\n");
                    printf("Выберите цифру: ");
                }
                if (c == 3)
                {
                    printf("Это \033[1;32m3. Среда\033[0m\n\n");
                    printf("Выберите цифру: ");
                }
                if (c == 4)
                {
                    printf("Это \033[1;32m4. Четверг\033[0m\n\n");
                    printf("Выберите цифру: ");
                }
                if (c == 5)
                {
                    printf("Это \033[1;32m5. Пятница\033[0m\n\n");
                    printf("Выберите цифру: ");
                }
                if (c == 6)
                {
                    printf("Это \033[1;32m6. Суббота\033[0m\n\n");
                    printf("Выберите цифру: ");
                }
                if (c == 0)
                {
                    printf("Это \033[1;32m0. Воскресенье\033[0m\n\n");
                    printf("Выберите цифру: ");
                }
            }
            else
            {
                printf("\033[5;31mОшибка! День должен быть в диапазоне 1-365! \033[0m\n\n");
                printf("Выберите цифру: ");
            }
            break;
        case 3:
            printf("Введите номер дня: ");
            scanf_s("%i", &a);
            if ((a >= 1) and (a <= 365))
            {
                printf("Введите, какой день недели был 1 Января (от 1 до 7): ");
                scanf_s("%i", &b);
                if ((b >= 1) and (b <= 7))
                {
                    c = ((a + b - 2) % 7) + 1;
                    if (c == 1)
                    {
                        printf("\033[1;32mНомер дня недели: 1. Понедельник \033[0m\n\n");
                        printf("Выберите цифру: ");
                    }
                    if (c == 2)
                    {

                        printf("\033[1;32mНомер дня недели: 2. Вторник \033[0m\n\n");
                        printf("Выберите цифру: ");
                    }
                    if (c == 3)
                    {
                        printf("\033[1;32mНомер дня недели: 3. Среда \033[0m\n\n");
                        printf("Выберите цифру: ");
                    }
                    if (c == 4)
                    {
                        printf("\033[1;32mНомер дня недели: 4. Четверг \033[0m\n\n");
                        printf("Выберите цифру: ");
                    }
                    if (c == 5)
                    {
                        printf("\033[1;32mНомер дня недели: 5. Пятница \033[0m\n\n");
                        printf("Выберите цифру: ");
                    }
                    if (c == 6)
                    {
                        printf("\033[1;32mНомер дня недели: 6. Суббота \033[0m\n\n");
                        printf("Выберите цифру: ");
                    }
                    if (c == 7)
                    {
                        printf("\033[1;32mНомер дня недели: 7. Воскресенье \033[0m\n\n");
                        printf("Выберите цифру: ");
                    }
                }
                else
                {
                    printf("\033[5;31mОшибка! День недели должен быть в диапазоне 1-7! \033[0m\n\n");
                    printf("Выберите цифру: ");
                }
            }
            else
            {
                printf("\033[5;31mОшибка! День должен быть в диапазоне 1-365! \033[0m\n\n");
                printf("Выберите цифру: ");
            }
            break;
        case 4:
            printf("Введите значение А: ");
            scanf_s("%i", &a);
            printf("Введите значение B: ");
            scanf_s("%i", &b);
            printf("Введите значение C: ");
            scanf_s("%i", &c);
            if (a > 0 and b > 0 and c > 0)
            {
                a1 = (a / c) * (b / c);
                b1 = a * b - a1 * c * c;
                printf("\033[1;32mКоличество квадратов, размещенных на прямоугольнике: \033[0m%i\n", a1);
                printf("\033[1;32mПлощадь незанятой части прямоугольника: \033[0m%i\n\n", b1);
                printf("Выберите цифру: ");
            }
            else
            {
                printf("\033[5;31mОшибка! Число должно быть положительное. \033[0m\n\n");
                printf("Выберите цифру: ");
            }
            break;
        case 5:
            printf("Введите год: ");
            scanf_s("%i", &a);
            c = a / 100 + 1;
            printf("\033[1;32mДля %i года %i номер столетия\033[0m\n\n", a, c);
            printf("Выберите цифру: ");
            break;
        case 6:
            printf("Хорошо, выходим(\n");
            return 0;
            break;
        default:
            printf("\033[5;31m Неправильный ввод! Попробуйте еще раз. \033[0m\n\n");
            printf("Выберите цифру: ");
        }
    }
}
