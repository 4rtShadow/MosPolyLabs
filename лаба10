#include <stdio.h>
#include <math.h>
#include <locale.h>


int main()
{
    int a, b, c;

    setlocale(LC_ALL, "Russian");

    printf("Выберите задачу: \n");
    printf("1. Проверить истинность высказывания A > 2 и B <= 3. \n");
    printf("2. Проверить истинность высказывания A < B < C. \n");
    printf("3. Проверить истинность высказывания: «Данное число является четным двузначным». \n");
    printf("4. Проверить истинность высказывания: «Цифры данного числа образуют возрастающую или убывающую последовательность».  \n");
    printf("5. Проверить истинность высказывания: «Данное число читается одинаково слева направо и справа налево». \n");
    printf("6. Проверить истинность высказывания: «Треугольник со сторонами a, b, c является прямоугольным». \n");
    printf("7. Проверить истинность высказывания: «Существует треугольник со сторонами a, b, c». \n");
    printf("8. Выход\n\n");
    printf("Ваше число: ");
    while (1)
    {
        int vvod;
        scanf_s("%d", &vvod);
        switch (vvod)
        {
        case 1:

            printf("Введите значение А: ");
            scanf_s("%i", &a);
            printf("Введите значение B: ");
            scanf_s("%i", &b);
            if ((a > 2) and (b <= 3))
            {
                printf("\033[1;32mВыражение истинно. A>2 и B<=3. \033[0m\n\n");
                printf("Выберите цифру: ");
            }
            else
            {
                printf("\033[1;31mВыражение ложно. \033[0m\n\n");
                printf("Выберите цифру: ");
            }
            break;
        case 2:
            printf("Введите значение А: ");
            scanf_s("%i", &a);
            printf("Введите значение B: ");
            scanf_s("%i", &b);
            printf("Введите значение C: ");
            scanf_s("%i", &c);
            if (a < b < c)
            {
                printf("\033[1;32mВыражение истинно. A<B<C. \033[0m\n\n");
                printf("Выберите цифру: ");
            }
            else
            {
                printf("\033[1;31mВыражение ложно. \033[0m\n\n");
                printf("Выберите цифру: ");
            }
            break;
        case 3:
            printf("Введите значение А: ");
            scanf_s("%i", &a);
            if ((a > 9) and (a < 100) and (a % 2 == 0))
            {
                printf("\033[1;32mДанное число является четным двузначным. \033[0m\n\n");
                printf("Выберите цифру: ");
            }
            else
            {
                printf("\033[1;31mДанное число не является четным двузначным. \033[0m\n\n");
                printf("Выберите цифру: ");
            }
            break;
        case 4:
            printf("Введите значение А: ");
            scanf_s("%i", &a);
            if ((a / 100) > (a % 100 / 10) and (a % 100 / 10) > (a % 10) or (a / 100) < (a % 100 / 10) and (a % 100 / 10) < (a % 10))
            {
                printf("\033[1;32mЦифры данного числа образуют возрастающую или убывающую последовательность. \033[0m\n\n");
                printf("Выберите цифру: ");
            }
            else
            {
                printf("\033[1;31mЦифры данного числа не образуют возрастающую или убывающую последовательность. \033[0m\n\n");
                printf("Выберите цифру: ");
            }
            break;
        case 5:
            printf("Введите значение А: ");
            scanf_s("%i", &a);
            if (a % 10 == a / 1000 & a % 100 / 10 == a % 1000 / 100)
            {
                printf("\033[1;32mДанное число читается одинаково слева направо и справа налево. \033[0m\n\n");
                printf("Выберите цифру: ");
            }
            else
            {
                printf("\033[1;31mДанное число не читается одинаково слева направо и справа налево. \033[0m\n\n");
                printf("Выберите цифру: ");
            }
            break;
        case 6:
            printf("Введите значение А: ");
            scanf_s("%i", &a);
            printf("Введите значение B: ");
            scanf_s("%i", &b);
            printf("Введите значение C: ");
            scanf_s("%i", &c);
            if (a * a == b * b + c * c or b * b == a * a + c * c or c * c == a * a + b * b)
            {
                printf("\033[1;32mТреугольник со сторонами %i, %i, %i является прямоугольным. \033[0m\n\n", a, b, c);
                printf("Выберите цифру: ");
            }
            else
            {
                printf("\033[1;31mТреугольник со сторонами %i, %i, %i не является прямоугольным. \033[0m\n\n", a, b, c);
                printf("Выберите цифру: ");
            }
            break;
        case 7:
            printf("Введите значение А: ");
            scanf_s("%i", &a);
            printf("Введите значение B: ");
            scanf_s("%i", &b);
            printf("Введите значение C: ");
            scanf_s("%i", &c);
            if ((a + b) > c and (a + c) > b and (b + c) > a)
            {
                printf("\033[1;32mТреугольник со сторонами %i, %i, %i существует. \033[0m\n\n", a, b, c);
                printf("Выберите цифру: ");
            }
            else
            {
                printf("\033[1;31mТреугольник со сторонами %i, %i, %i не существует. \033[0m\n\n", a, b, c);
                printf("Выберите цифру: ");
            }
            break;
        case 8:
            printf("Хорошо, выходим(\n");
            return 0;
            break;
        default:
            printf("\033[5;31m Неправильный ввод! Попробуйте еще раз. \033[0m\n\n");
            printf("Выберите цифру: ");
        }
    }
}
