#include <stdio.h>
#include <math.h>
#include <locale.h>
#include <limits.h>


int main()
{
    int a, b, c, d, max;
    float  xa, ya, xb, yb, xc, yc, ab, ac;

    setlocale(LC_ALL, "Russian");

    printf("Выберите задачу: \n");
    printf("1. Вывести новые значения переменных A и B. \n");
    printf("2. Даны три числа. Найти сумму двух наибольших из них. \n");
    printf("3. Определить, какая из двух последних точек (B или C) расположена ближе к A, и вывести эту точку и ее расстояние от точки A. \n");
    printf("4. Определить номер координатной четверти, в которой находится данная точка.  \n");
    printf("5. Дано целое число. Вывести его строку-описание вида «отрицательное четное число», «нулевое число», «положительное нечетное число» и т. д. \n");
    printf("6. Дано целое число, лежащее в диапазоне 1–999. Вывести его строку-описание вида «четное двузначное число», «нечетное трехзначное число» и т. д. \n");
    printf("7. Выход\n\n");
    printf("Ваше число: ");
    while (1)
    {
        int vvod;
        scanf_s("%d", &vvod);
        switch (vvod)
        {
        case 1:
            printf("Введите число А: ");
            scanf_s("%i", &a);
            printf("Введите число В: ");
            scanf_s("%i", &b);
            if (b != a)
            {
                if (a > b)
                {
                    b = a;
                    printf("\033[1;32mПосле смены число A: %i, число B: %i\033[0m\n\n", a, b);
                }
                if (b > a)
                {
                    a = b;
                    printf("\033[1;32mПосле смены число A: %i, число B: %i\033[0m\n\n", a, b);
                }
            }
            else
            {
                a = 0;
                b = 0;
                printf("\033[1;32mПосле смены число A: %i, число B: %i\033[0m\n\n", a, b);
            }
            printf("Выберите цифру: ");
            break;
        case 2:
            printf("Введите число А: ");
            scanf_s("%i", &a);
            printf("Введите число B: ");
            scanf_s("%i", &b);
            printf("Введите число C: ");
            scanf_s("%i", &c);
            if ((a != b) and (a != c) and (c != b))
            {
                if ((a < b) and (a < c))
                {
                    d = a;
                }
                if ((b < a) and (b < c))
                {
                    d = b;
                }
                if ((c < a) and (c < b))
                {
                    d = c;
                }
                max = a + b + c - d;
                printf("\033[1;32mСумма двух максимальных чисел: %i\033[0m\n\n", max);
            }
            else
            {
                printf("\033[5;31mОшибка! Введите различные числа.\033[0m\n\n");
            }
            printf("Выберите цифру: ");
            break;
        case 3:
            printf("Введите значение A по Х: ");
            scanf_s("%f", &xa);
            printf("Введите значение A по Y: ");
            scanf_s("%f", &ya);
            printf("Введите значение B по Х: ");
            scanf_s("%f", &xb);
            printf("Введите значение B по Y: ");
            scanf_s("%f", &yb);
            printf("Введите значение C по Х: ");
            scanf_s("%f", &xc);
            printf("Введите значение C по Y: ");
            scanf_s("%f", &yc);
            ab = sqrt(pow(xa - xb, 2) + pow(ya - yb, 2));
            ac = sqrt(pow(xa - xc, 2) + pow(ya - yc, 2));
            if (ac < ab)
            {
                printf("\033[1;32mТочка C расположена ближе к A, расстояние от точки С до А: %0.f \033[0m\n\n", ac);
            }
            else
            {
                if (ab < ac)
                {
                    printf("\033[1;32mТочка В расположена ближе к A, расстояние от точки В до А: %0.f \033[0m\n\n", ab);
                }
                else
                {
                    if (ab = ac)
                    {
                        printf("\033[1;32mРасстояние между (А и В) и (А и С) одинаковое. \033[0m\n\n");
                    }
                }
            }
            printf("Выберите цифру: ");
            break;
        case 4:
            printf("Введите координату Х: ");
            scanf_s("%i", &a);
            printf("Введите координату Y: ");
            scanf_s("%i", &b);
            if ((a > 0) and (b > 0))
                printf("\033[1;32mЭто 1 четверть. \033[0m\n\n");
            if ((a < 0) and (b > 0))
                printf("\033[1;32mЭто 2 четверть. \033[0m\n\n");
            if ((a < 0) and (b < 0))
                printf("\033[1;32mЭто 3 четверть. \033[0m\n\n");
            if ((a > 0) and (b < 0))
                printf("\033[1;32mЭто 4 четверть. \033[0m\n\n");
            printf("Выберите цифру: ");
            break;
        case 5:
            printf("Введите число А: ");
            scanf_s("%i", &a);
            if ((a > 0) and (a % 2 == 0))
            {
                printf("\033[1;32mЭто четное положительное число. \033[0m\n\n");
            }
            if ((a > 0) and (a % 2 != 0))
            {
                printf("\033[1;32mЭто нечетное положительное число. \033[0m\n\n");
            }
            if ((a < 0) and (a % 2 != 0)) {
                printf("\033[1;32mЭто нечетное отрицательное число. \033[0m\n\n");
            }
            if ((a < 0) and (a % 2 == 0)) {
                printf("\033[1;32mЭто четное отрицательное число. \033[0m\n\n");
            }
            if (a == 0) {
                printf("\033[1;32mЭто нулевое число. \033[0m\n\n");
            }
            printf("Выберите цифру: ");
            break;
        case 6:
            printf("Введите значение А: ");
            scanf_s("%i", &a);
            if ((a >= 1) and (a <= 999))
            {
                if ((a >= 10) and (a <= 99) and (a % 2 == 0))
                    printf("\033[1;32mЭто четное двузначное число. \033[0m\n\n");
                if ((a >= 10) and (a <= 99) and (a % 2 != 0))
                    printf("\033[1;32mЭто нечетное двузначное число. \033[0m\n\n");
                if ((a >= 100) and (a <= 999) and (a % 2 == 0))
                    printf("\033[1;32mЭто четное трехзначное число. \033[0m\n\n");
                if ((a >= 100) and (a <= 999) and (a % 2 != 0))
                    printf("\033[1;32mЭто нечетное трехзначное число. \033[0m\n\n");
            }
            else
            {
                printf("\033[5;31mОшибка! Число должно лежать в диапазоне 1-999. \033[0m\n\n");
            }
            printf("Выберите цифру: ");
            break;
        case 7:
            printf("Хорошо, выходим(\n");
            return 0;
            break;
        default:
            printf("\033[5;31m Неправильный ввод! Попробуйте еще раз. \033[0m\n\n");
            printf("Выберите цифру: ");
        }
    }
}
